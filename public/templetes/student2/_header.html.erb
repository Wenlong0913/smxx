<style>
.topbar-right{
  position: relative;
  
  text-align: right;
  float: right;
}
.topbar-right .user{
  display: inline-block;
  position: relative;
}
.user .dropdown {
  position: static;
  text-align: left;
}
.user-dropdown {
  display: inline-block;
}
.white-text {
  color: #fff !important;
}
.text-left {
  text-align: left;
}
.topbar-right .sub-menu a {
  font-size: 14px;
  font-weight: 400;
}
.topbar-right .user a {
  color: #fff;
  
}
.topbar-two .sub-menu {
  background-color: #e81a1b;
  border-color: #fff;
}

ul.sub-menu{
  background-color: #e81a1b;
  position: absolute;
  top:100%;  
  z-index:1000;
  box-shadow: 0 6px 12px rgba(0,0,0,.175);
  min-width: 100% ;
  display: none;
}
ul.sub-menu li a:hover{
  color: #e81a1b !important;
  background-color:white; 
}
.sub-menu li a{
  padding:10px 20px;
  border-top:1px solid #f0f3f5;
  display:block 
}
@media (max-width:375px) {
  .topbar-right .user{
    display: inline-block;
    position: relative;
    left:-16px!important;
    top:-6px!important
  }
  ul.sub-menu{
    background-color: #e81a1b;
    position: absolute;
    top:100%;  
    z-index:1000;
    box-shadow: 0 6px 12px rgba(0,0,0,.175);
    min-width: 100% ;
    display: block;
  }
 
 }

</style>
<div class="header">
<div class="container">
   <div class="logo">
    <h1><a href="index.html">市民艺术学校</a></h1>
   </div>
   <nav class="navbar navbar-default" role="navigation">
                   <div class="navbar-header">
                       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                           <span class="sr-only">Toggle navigation</span>
                           <span class="icon-bar"></span>
                           <span class="icon-bar"></span>
                           <span class="icon-bar"></span>
                       </button>
                   </div>
                   <!--/.navbar-header-->
                   <!-- 用户中心 -->
                   <div class=" col-xs-12 col-md-3">
                   <div class="topbar-right" style="width: 100%;">
                     <div class="user" id="user" style="padding: 15px;">
                       <div class="dropdown user-dropdown white-text" style="color: white">
                         你好,
                         <% if current_user %>
                           <a href="#" aria-expanded="true" class="white-text"><%= current_user.name %><i class="fa fa-caret-down" aria-hidden="true"></i></a>
                           <ul class="sub-menu text-left" id="sub-menu">
                             <li><%= link_to '个人中心', frontend_smusers_path, title: '个人中心', class:"white-text"  %></li>
                             <li><%= link_to '退出', sign_out_path, method: :delete, class:"white-text" %></li>
                           </ul>
                         <% else %>
                           <a href="/" aria-expanded="true" class="white-text" >欢迎访问<i class="fa fa-caret-down" aria-hidden="true"></i></a>
                           <ul class="sub-menu text-left" id="sub-menu">
                             <li><%= link_to '登录', admin_sign_in_path, class:"white-text" %></li>
                             <li><%= link_to '注册', sign_up_path, class:"white-text" %></li>
                           </ul>
                         <% end %>
                       </div>
                     </div>
                     </div>
                     </div>
                     <script>
                     </script>
                   <div class="col-xs-12 col-md-7">
                   <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                     <ul class="nav navbar-nav"> 
                               <li><%= link_to '开课目录', frontend_courses_path%></li>       
                               <li><%= link_to '个人选课请况', self_classorder_users_path %></li>
                               <li><%= link_to '课程表', self_showtable_users_path %></li>      
                    </ul>  
                   </div>
                   </div>
                   <!--/.navbar-collapse-->
                   <div class="clearfix"></div>
   </nav> 
</div>
</div>
<script>
window.onload= function(){  
 var user = document.getElementById("user") 
 user.onmouseover=function(){ 
  document.getElementById("sub-menu").style.display = 'block';
 }
 user.onmouseout=function(){ 
  document.getElementById("sub-menu").style.display = 'none';
 }
}
</script>