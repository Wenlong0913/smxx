
    <!-- site header -->
    <header class="site-header">
      <div class="container">
        <!-- site header logo -->
        <div class="site-header__logo">
          <a href="<%= get_url(@site) %>">
            <%= @site.name %>
          </a>
        </div>
        <!-- site header logo -->

        <!-- site header icon -->
        <ul class="site-header__icon">
          <!-- audio icon -->
          <li class="site-header__icon__audio">
            <a href="#">
              <i class="audio-bar">
                <span class="audio-bar__item"></span>
                <span class="audio-bar__item"></span>
                <span class="audio-bar__item"></span>
                <span class="audio-bar__item"></span>
              </i>
            </a>
          </li>
          <!-- /audio icon -->

          <!-- menu icon -->
          <li class="site-header__icon__nav">
            <a href="#">
              <i class="fa fa-list-ul"></i>
            </a>
          </li>
          <!-- /menu icon -->
        </ul>
        <!-- /site header icon -->
      </div>
    </header>
    <!-- /site header -->
