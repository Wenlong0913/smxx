<div class="main-wrapper">
  <%= render file: 'public/templetes/newshub/_header.html.erb' %>
	<div class="container">
    <div class="row">
      <%= render file: 'public/templetes/newshub/_top_menu.html.erb' %>

      <% unless mobile_device? %>
      <div class="col-md-2 tr-sidebar tr-sticky padding-0">
        <%= render file: 'public/templetes/newshub/_side_menu.html.erb' %>
      </div>
      <% end %>

      <div class="col-md-7 col-xs-12 <%= 'padding-0' if mobile_device? %>">
        <div class="tr-content">
          <div class="tr-section bg-transparent">
            <div class="tr-section">
              <% if @sites.present? %>
                <% @sites.each_with_index do |site, index| %>
                  <div class="row" style="margin: 10px 0;">
                    <div class="col-md-4 col-xs-4 <%= 'padding-0' if mobile_device? %>">
                      <a href="<%= frontend_site_path(site) %>">
                        <img class="img-responsive" src="<%= site.first_image %>" style="height: 100px;">
                      </a>
                    </div>
                    <div class="col-md-8 col-xs-8">
                      <div class="header-text">
                        <h4>
                          <a href="<%= frontend_site_path(site) %>"><%= site.title.truncate(40) %></a>
                        </h4>
                        <div class="info">
                          <span>联系人：<%= @site.contact_name %></span>
                          <br>
                          <span>联系电话：<%= @site.contact_phone %></span>
                          <br>
                          <span>地址：<%= @site.address_line %></span>
                          <br>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <h4 class="text-center">当前分类下暂无场馆</h4>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <% unless mobile_device? %>
      <div class="col-md-3 tr-sidebar tr-sticky">
        <%= render file: 'public/templetes/newshub/_sidebar.html.erb' %>
      </div>
      <% end %>
    </div>

		<% if Keystore.value_for('banner-site-bottom-center-819×119').present? %>
		<div class="tr-ad ad-bottom ad-image text-center">
      <% banner_site_bottom_center = Keystore.value_for('banner-site-bottom-center-819×119').split('|') %>
			<a href="<%= banner_site_bottom_center[1] || 'javascript:void(0)' %>" target="_blank" ><img class="img-responsive" src="<%= banner_site_bottom_center[0] %>" alt="广告横幅819×119"></a>
		</div>
    <% end %>

	</div><!-- /.container-fluid -->
</div><!-- main-wrapper -->
<%= render file: 'public/templetes/newshub/_footer.html.erb' %>
