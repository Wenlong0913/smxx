			<div class="title pull-left">
				<h1><%= @site_catalog.name %></h1>
			</div>
	        <ol class="breadcrumb pull-right">
	            <li><a href="/">首页</a></li>
	            <li class="active"><%= @site_catalog.name %></li>
	        </ol>
		</div><!-- /.tr-breadcrumb -->

		<div class="row tr-content">
      <!-- 头条-->
			<div class="col-sm-5 col-md-6 tr-sticky">

				<div class="theiaStickySidebar">
					<% Site.where(catalog_id: @site_catalog.id).each do |site| %>
					<div class="tr-section">
						<div class="section-title title-before">
							<h1><a href="#"><%= site.catalog.name %></a></h1>
						</div>
						<div class="tr-post">
							<div class="entry-header">
								<div class="entry-thumbnail">
									<a href="<%= frontend_site_path(site) %>"><img class="img-responsive" src="<%= site.first_image %>" alt="Image"></a>
								</div>
							</div>
							<div class="post-content">
								<div class="author">
									<a href="#"><img class="img-responsive img-circle" src="/templetes/newshub/images/others/author1.png" alt="Image"></a>
								</div>
								<div class="entry-meta">
									<ul>
										<li>By <a href="#"><%= site.catalog.name %></a></li>
										<li><a href="#"> <%= distance_of_time_in_words_to_now(site.updated_at) %>前</a></li>
										<li>
											<ul>
												<li>分享到</li>
												<li><a href="#"><i class="fa fa-qq" aria-hidden="true"></i></a></li>
												<li><a href="#"><i class="fa fa-weixin" aria-hidden="true"></i></a></li>
												<li><a href="#"><i class="fa fa-weibo" aria-hidden="true"></i></a></li>
