<%= render file: @cms_site.template_dir + '_header.html' %>
<div id="wrap">
  <section id="start" class="padding-top-bottom text-center">
    <div class="container">

      <div class="tr-breadcrumb">
  			<div class="title pull-left">
  				<h1>
            意见反馈
          </h1>
  			</div>
        <ol class="breadcrumb pull-right">
          <li><a href="/">首页</a></li>
        </ol>
  		</div>

      <div class="row">
        <div class="col-sm-8 col-md-8 tr-sticky">
          <div class="tr-section">
            <div class="row" style="margin-top: 30px;">
              <div class="col-md-9 col-md-offset-1 col-xs-12">
                <div class="form-horizontal">
                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">内容</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" name="name" rows="8"  placeholder="请输入意见内容..."></textarea>
                    </div>
                  </div>
                  <p class="text-center">
                    <button type="button" class="btn btn-warning btn-lg">提交</button>
                  </p>
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>
          </div>
        </div>

        <div class="col-sm-5 col-md-4 tr-sticky" >
          <div class="theiaStickySidebar">
            <div class="tr-section">
              <div class="user-logo">
                <img src="/templetes/newshub/images/team/5.jpg " alt="" class="img-circle" width="150px">
              </div>
              <h3>昵称</h3>
              <hr>
              <style media="screen">
                #editSelf ul li{
                  float: none;
                }
                #editSelf ul li a{
                  display: block;
                }
                .active {
                  text-decoration: none;
                  background-color: #eee;
                }
              </style>
              <%= render file: 'frontend/users/_nav_sidebar.html.erb' %>
            </div>
          </div>
        </div>
      </div>


    </div>
  </section>
  <%= render file: @cms_site.template_dir + '_footer.html' %>
</div>
