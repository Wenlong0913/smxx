<div id="wrap">
  <section id="start" class="padding-top-bottom text-center">
    <div class="container">

      <div class="tr-breadcrumb">
  			<div class="title pull-left">
  				<h1>
            手机号变更
          </h1>
  			</div>
        <ol class="breadcrumb pull-right">
          <li><a href="/">首页</a></li>
        </ol>
  		</div>
        <div class="row">
          <div class="col-sm-8 col-md-8 tr-sticky">
            <div class="theiaStickySidebar">
                <div class="tr-section">
                  <div class="form-horizontal" style="max-width: 500px; margin: 50px auto;">
                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-2 control-label">手机号：</label>
                      <div class="col-sm-10">
                        <input type="phone" class="form-control" id="inputPhone" placeholder="手机号">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-2 control-label">验证码：</label>
                      <div class="col-sm-10">
                        <div class="input-group">
                          <input type="text" class="form-control" placeholder="请输入验证码">
                          <span class="input-group-btn">
                            <button id="get_code" class="btn btn-default" type="button" style="border: 1px solid #ececec; padding: 9px 12px;">获取验证码</button>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-info">提交保存</button>
                    </div>
                  </div>
                </div>
            </div>
          </div>

          <div class="col-sm-5 col-md-4 tr-sticky" >
    				<%= render file: 'frontend/users/_nav_sidebar.html.erb' %>
          </div>
        </div>

    </div>
  </section>
  <script type="text/javascript">
    $(document).ready(function () {
      var wait=60;
      function time(o) {
        if (wait == 0 ) {
         o.removeAttribute("disabled");
         $(o).text("重新发送");
         wait = 60;
        } else {
         o.setAttribute("disabled", true);
         $(o).text("重新发送");
         document.getElementById("get_code").append(wait--);
         setTimeout(function() {
          time(o);
         },
         1000)
        }
       }
      document.getElementById("get_code").onclick=function(){time(this);}
    });
  </script>
  <%= render file: @cms_site.template_dir + '_footer.html' %>
</div>
