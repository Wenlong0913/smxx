<div id="wrap" class="frontend bind-mobile">
  <%= render file: @cms_site.template_dir + '_header.html' %>
  <section id="start" class="padding-top-bottom text-center">
    <div class="container">
      <div class="tr-breadcrumb">
  			<div class="title pull-left">
  				<h1>绑定手机号</h1>
  			</div>
        <ol class="breadcrumb pull-right">
          <li><a href="/">首页</a></li>
          <li><%= link_to '个人中心', users_path %></li>
        </ol>
  		</div>
      <div class="row">
        <div class="col-md-12 col-xs-12 tr-sticky">
          <div class="theiaStickySidebar">
            <div class="tr-section">
              <%= simple_form_for(current_user, url: binding_phone_users_path, remote: true, method: :post, html: {class: "margin-bottom-0 register", id: 'phoneForm'}) do |f|%>
                <div class="row">
                  <div class="col-md-4 col-md-offset-4">
                    <div class="form-group">
                      <div class="col-md-12">
                        <input type="phone" name="user[mobile]" class="form-control input-md" placeholder="手机号">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-12">
                        <div class="input-group">
                          <input type="text" name="user[code]" class="form-control input-md" placeholder="请输入验证码">
                          <span class="input-group-btn">
                            <button data-url="<%= api_v1_sessions_sms_path%>" class="btn btn-default get_code input-md" type="button" style="border: 1px solid #ececec; padding: 9px 12px;">获取验证码</button>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="text-center text-danger title_error">
                    </div>
                    <div class="form-group">
                      <div class="col-md-12" style="margin: 10px 0;">
                        <%= f.submit '提交保存', class: 'btn btn-success', id: 'click_login', data:{href: @return_url ? @return_url : users_path}%>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%= render file: @cms_site.template_dir + '_footer.html' %>
</div>
