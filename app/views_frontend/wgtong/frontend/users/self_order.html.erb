<%= render file: @cms_site.template_dir + '_header.html' %>
<div id="wrap">
  <section id="start" class="padding-top-bottom text-center">
    <div class="container">

      <div class="tr-breadcrumb">
  			<div class="title pull-left">
  				<h1>
            我的订单
            <small><%= @user_orders.any? ? @user_orders.size : '0' %> 个订单</small>


          </h1>
  			</div>
        <ol class="breadcrumb pull-right">
          <li><a href="/">首页</a></li>
        </ol>
  		</div>

        <style media="screen">
          .successOrder {
            display: inline-block;
            width: 10px;
            height: 10px;
          }
          .warningOrder {
            display: inline-block;
            width: 10px;
            height: 10px;
          }
          .successOrderBg {
            background: rgba(92,184,92,0.5);
          }
          .warningOrderBg {
            background: rgba(217,83,79,0.5);
          }
          .orderPrice {
            font-size: 25px;
            color: #e81a1b;
          }
          .orderLink {
            color: #fff;
            padding: 5px 15px;
          }
          .orderLinkPayBg {
            background-color: brown;
          }
          .orderLinkOutBg {
            background-color: #9e9e9e;
          }
          .orderDescription {
            max-width: 100%;
            text-overflow : ellipsis;
            overflow: hidden;
            white-space: nowrap
          }
          .productImg {
            max-height: 150px;
            max-width: 150px;
            overflow: hidden;
          }
        </style>
        <div class="row">
          <div class="col-sm-8 col-md-8 tr-sticky">
            <div class="theiaStickySidebar">
              <!-- 筛选分类 -->
              <div class="tr-section">
                <p class="text-left">
                  支付状态：
                  <a href="#" class="btn btn-default">
                    全部
                  </a>
                   <a href="#" class="btn btn-default">
                     <span class="successOrder successOrderBg"></span>
                     已支付
                   </a>
                   <a href="#" class="btn btn-default">
                     <span class="warningOrder warningOrderBg"></span>
                     未支付
                   </a>
                </p>
              </div>
              <% if @user_orders.any? %>
                <% @user_orders.each_with_index do |order| %>
                  <!-- 分类中模版 -->
                  <div class="tr-section">
                    <div class="row">
                      <div class="col-md-12">
                        <p class="clearfix">
                          <span class="pull-left">
                            <a href="#">
                              <code><i class="fa fa-share-alt"></i> 订单号:   12312312</code>
                            </a>
                          </span>
                          <span class="pull-right">
                            数量：x2
                          </span>
                        </p>
                      </div>
                      <div class="col-md-3">
                        <div class="productImg">
                          <img src="/templetes/newshub/images/team/1.jpg" alt="" class="img-responsive"/>
                        </div>
                      </div>
                      <div class="col-md-9 text-left">
                        <h4 >
                          <a href="#" style="color: #2e2e2e;">
                            产品名称
                          </a>
                        </h4>
                        <p class="orderPrice">¥ 132.00</p>
                        <p class="orderDescription">产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息</p>
                        <p class="clearfix">
                          <span class="pull-right">
                            <a href="#" class="orderLink orderLinkPayBg">
                              去支付
                            </a>
                          </span>

                          <span class="pull-right">
                            <a href="#" class="orderLink orderLinkOutBg">
                              取消订单
                            </a>
                          </span>
                        </p>
                      </div>
                    </div>
                  </div>
                  <!-- 未支付状态 -->
                  <div class="tr-section">
                    <div class="row">
                      <div class="col-md-12">
                        <p class="clearfix">
                          <span class="pull-left">
                            <a href="#">
                              <code class="warningOrderBg"><i class="fa fa-share-alt"></i> 订单号:   12312312</code>
                            </a>
                          </span>

                          <span class="pull-right">
                            数量：x2
                          </span>
                        </p>
                      </div>

                      <div class="col-md-3">
                        <div class="productImg">
                          <img src="/templetes/newshub/images/team/1.jpg" alt="" class="img-responsive"/>
                        </div>
                      </div>

                      <div class="col-md-9 text-left">
                        <h4 >
                          <a href="#" style="color: #2e2e2e;">
                            产品名称
                          </a>
                        </h4>
                        <p class="orderPrice">¥ 132.00</p>
                        <p class="orderDescription">产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息</p>
                        <p class="clearfix">
                          <span class="pull-right">
                            <a href="#" class="orderLink orderLinkPayBg">
                              去支付
                            </a>
                          </span>

                          <span class="pull-right">
                            <a href="#" class="orderLink orderLinkOutBg">
                              取消订单
                            </a>
                          </span>

                        </p>
                      </div>


                    </div>
                  </div>
                  <!-- 已支付状态 -->
                  <div class="tr-section">
                  <div class="row">
                    <div class="col-md-12">
                      <p class="clearfix">
                        <span class="pull-left">
                          <a href="#">
                            <code class="successOrderBg"><i class="fa fa-share-alt"></i> 订单号:   12312312</code>
                          </a>
                        </span>
                        <span class="pull-right">
                          数量：x2
                        </span>
                      </p>
                    </div>
                    <div class="col-md-3">
                      <div class="productImg">
                        <img src="/templetes/newshub/images/team/1.jpg" alt="" class="img-responsive"/>
                      </div>
                    </div>
                    <div class="col-md-9 text-left">
                      <h4 >
                        <a href="#" style="color: #2e2e2e;">
                          产品名称
                        </a>
                      </h4>
                      <p class="orderPrice">¥ 132.00</p>
                      <p class="orderDescription">产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息产品描述详细信息</p>
                      <p class="clearfix">
                        <span class="pull-right">
                          <a href="#" class="orderLink successOrderBg">
                            查看详情
                          </a>
                        </span>
                      </p>
                    </div>
                  </div>
                </div>
                <% end %>
              <% else %>
                <div class="row">
                  <div class="col-md-12 text-center">
                    <i class="fa fa-frown-o" style="font-size:40px;color: #999;"></i>
                  </div>
                  <div class="col-md-12 text-center">
                    您目前还没有任何订单信息
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="col-sm-5 col-md-4 tr-sticky" >
    				<div class="theiaStickySidebar">
    					<div class="tr-section">
                <div class="user-logo">
                  <img src="/templetes/newshub/images/team/5.jpg " alt="" class="img-circle" width="150px">
                </div>
                <h3>昵称</h3>
                <hr>
                <style media="screen">
                  #editSelf ul li{
                    float: none;
                  }
                  #editSelf ul li a{
                    display: block;
                  }
                  .active {
                    text-decoration: none;
                    background-color: #eee;
                  }
                </style>
                <div class="collapse navbar-collapse" id="editSelf">
                  <ul class="nav">
                    <li>
                      <a class="text-center" href="javascript: void(0)">消息中心 <span class="badge" style="background-color: #d9534f;">4</span></a>
                    </li>
                    <li>
                      <%= link_to '账号设置', edit_frontend_user_path(current_user) %>
                    </li>
                    <li class="active">
                      <%= link_to '我的订单', self_order_frontend_users_path %>
                    </li>
                    <li>
                      <a class="text-center" href="javascript: void(0)">我的评论</a>
                    </li>
                    <li>
                      <a class="text-center" href="javascript: void(0)">意见反馈</a>
                    </li>
                  </ul>
                </div>


              </div>

    				</div>

          </div>
        </div>

    </div>
  </section>
  <%= render file: @cms_site.template_dir + '_footer.html' %>
</div>
