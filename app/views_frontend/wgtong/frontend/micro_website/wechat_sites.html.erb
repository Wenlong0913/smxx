<%= render file: 'frontend/micro_website/_navbar.html.erb' %>

<div class="panel panel-default top-tabs-block">
  <div class="list-group-item screen-list">
    <label class="<%= 'active' if @site_catalog.blank? %>">
      <a href="<%= wechat_sites_micro_website_path %>">
        <small>全部</small>
      </a>
    </label>
    <% @site_catalogs.each do |catalog| %>
      <label class="<%= @site_catalog.id == catalog.id ? 'active' : '' if @site_catalog.present? %>">
        <a href="<%= wechat_sites_micro_website_path(catalog_id: catalog.id) %>">
          <small><%= catalog.name %></small>
        </a>
      </label>
    <% end %>
  </div>
</div>
<div class="list-group custom-list">
  <% @sites.each do |site|%>
    <a href='<%= wechat_site_micro_website_path(id: site.id) %>' class="list-group-item">
      <div class="row">
        <div class="col-xs-4" style="padding: 0px 0px 0px 15px">
          <div class="image-dom" style="background-image: url(<%= site.first_image %>)"></div>
        </div>
        <div class="col-xs-8">
          <div class="title">
            <%= site.title %>
          </div>
          <div class="address">
            <small><%= site.address_line %></small>
          </div>
          <div class="time">
            <small>营业时间: <%= site.business_hours %></small>
          </div>
          <div class="label-catalog">
            <small>
              <label><%= site.catalog.name %></label>
            </small>
          </div>
        </div>
      </div>
    </a>
  <% end%>
</div>
<%= paginate @sites %>
<style lang="css">
  body { padding-top: 55px; }
  @media (max-width: 767px) {
    .navbar-brand {
      margin: 0;
      padding: 15px;
      width: 41%;
    }
  }
  @media (min-width: 767px) {
    .title-cneter-p {
      display: none !important;
    }
  }
  .top-tabs-block{
    border: 0px;
    border-radius: 0px;
    margin-bottom: 5px
  }
  .top-tabs-block .screen-list label{
    position: relative;
    margin-right: 5px;
    width: 50px;
    text-align: center;
  }
  .top-tabs-block .screen-list label.active::before{
    content: '';
    height: 2px;
    width: 100%;
    position: absolute;
    bottom: -5px;
    left: 0px;
    background: #FF5722;
  }
  .custom-list .heard-title{
    background: #fff;
    padding: 15px 15px 5px;
  }
  .custom-list .title{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 16px;
  }
  .custom-list .time{
    color: #777;
  }
  .custom-list .address{
    margin-top: 10px;
    color: #777;
  }
  .custom-list .label-catalog label{
    color: #ccc;
    border: 1px solid;
    padding: 0px 3px;
    font-size: 10px;
    margin: 5px 5px 0px 0px;
  }
  .custom-list .image-dom{
    width: 100%;
    height: 90px;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .list-group-item:first-child, .list-group-item:last-child{
    border-radius: 0px
  }
  .list-group-item {
    border: 0px;
    border-bottom: 1px solid #ddd;
  }
</style>
