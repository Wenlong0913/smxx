<div class="section-container bg-silver m-t-20 m-b-20 primary-content order">
  <!-- BEGIN container -->
  <div class="container">
      <!-- BEGIN search-container -->
    <div class="search-container">
      <!-- BEGIN search-content -->
      <div class="search-content">
        <!-- BEGIN search-toolbar -->
        <div class="search-toolbar">
          <!-- BEGIN row -->
          <div class="row">
            <!-- BEGIN col-6 -->
            <div class="col-md-6">
              <h4>订单列表
              <span>&nbsp;‘xx’ 搜索出 3个 订单</span>
              </h4>
            </div>
            <!-- END col-6 -->
            <!-- BEGIN col-6 -->
            <div class="col-md-6 text-right">
              <ul class="sort-list">
                <li class="text"><i class="fa fa-filter"></i> 排序方式:</li>
                <li class="<%= 'sign' unless params[:reorder].present? %>">
                  <%= link_to '默认', agent_products_path %>
                </li>
                <li class="<%= 'sign' unless params[:reorder] == 'clicks' %>">
                  <s>点击</s>
                  <!-- <#%= link_to '点击', agent_products_path+"?reorder=clicks" %> -->
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'newest' %>">
                  <%= link_to '最新', agent_products_path+"?reorder=newest" %>
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'sales' %>">
                  <s>销量</s>
                  <!-- <#%= link_to '销量', agent_products_path+"?reorder=sales" %> -->
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'price' %>">
                  <%= link_to '价格', agent_products_path+"?reorder=price" %>
                </li>
              </ul>
            </div>
            <!-- END col-6 -->
          </div>
          <!-- END row -->
        </div>
        <!-- END search-toolbar -->
        <!-- BEGIN container -->
        <div class="search-item-container container-list">
          <div class="panel panel-forum">
            <!-- list -->
            <ul class="forum-list forum-topic-list">
              <% @orders.each do |order| %>
                <li>
                  <!-- begin media -->
                  <div class="media">
                    <%= image_tag (order.products.blank? ? 'no-picture' : (order.products.first.image_items.first.try{image_url})) %>
                  </div>
                  <!-- end media -->
                  <!-- begin info-container -->
                  <div class="info-container" style="height:65px">
                    <div class="info">
                      <h4 class="title">
                        <%= link_to '这是商品名称', '' %>
                      </h4>
                      <ul class="info-start-end">
                        <li class="row">
                          <div class="col-xs-6">
                            订单编号：
                            <span>20151520168525</span>
                          </div>
                          <div class="col-xs-6">
                            客户：
                            <a href=""> xxxx </a>
                          </div>
                          <div class="col-xs-6">
                            物流：20000545x4
                            <a href=""> (不知道什么物流) </a>
                          </div>
                          <div class="col-xs-6">
                            订单总价(含运费)：
                            <span class="text-danger">￥50</span>
                          </div>
                        </li>
                      </ul>
                    </div>
                    <div class="date-replies">
                      <div class="time">
                        2016/12/31 24:60:60
                      </div>
                      <div class="replies">
                        <div class="total">交易完成</div>
                        <div class="text">查看</div>
                      </div>
                    </div>
                  </div>
                  <!-- end info-container -->
                </li>
              <% end %>
            </ul>
            <!-- list -->
          </div>
        </div>
        <!-- END container -->

        <!-- BEGIN pagination -->
        <div class="text-center">
          <%= paginate @orders %>
        </div>
        <!-- END pagination -->
      </div>
      <!-- END search-content -->
      <!-- BEGIN search-sidebar -->
      <div class="search-sidebar">
          <h4 class="title">查询</h4>
          <form action="search_results.html" method="POST" name="filter_form">
              <div class="form-group">
                  <label class="control-label">关键字</label>
                  <input class="form-control input-sm" name="keyword" value="" placeholder="输入查询关键字" type="text">
              </div>
              <div class="form-group">
                  <label class="control-label">价格</label>
                  <div class="row row-space-0">
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_from" value="10" placeholder="Price From" type="number">
                      </div>
                      <div class="col-md-2 text-center p-t-5 f-s-12 text-muted">～</div>
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_to" value="10000" placeholder="Price To" type="number">
                      </div>
                  </div>
              </div>
              <div class="m-b-30">
                  <button type="submit" class="btn btn-sm btn-inverse"><i class="fa fa-search"></i> 查询</button>
              </div>
          </form>
      </div>
      <!-- END search-sidebar -->
    </div>
    <!-- END search-container -->
  </div>
  <!-- END container -->
</div>
