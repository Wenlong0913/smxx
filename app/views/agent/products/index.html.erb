
<div id="search-results" class="section-container bg-silver m-t-20 m-b-20 primary-content">
  <!-- BEGIN container -->
  <div class="container">
      <!-- BEGIN search-container -->
    <div class="search-container">
      <!-- BEGIN search-content -->
      <div class="search-content">
        <!-- BEGIN search-toolbar -->
        <div class="search-toolbar">
          <!-- BEGIN row -->
          <div class="row">
            <!-- BEGIN col-6 -->
            <div class="col-md-6">
              <h4>商品列表</h4>
              <% if params[:search].present? %>
                <h4>‘xx’ 搜索出 3个 商品</h4>
              <% end %>
            </div>
            <!-- END col-6 -->
            <!-- BEGIN col-6 -->
            <div class="col-md-6 text-right">
              <ul class="sort-list">
                <li class="text"><i class="fa fa-filter"></i> 排序方式:</li>
                <li class="<%= 'sign' unless params[:reorder].present? %>">
                  <%= link_to '默认', agent_products_path %>
                </li>
                <li class="<%= 'sign' unless params[:reorder] == 'clicks' %>">
                  <s>点击</s>
                  <!-- <#%= link_to '点击', agent_products_path+"?reorder=clicks" %> -->
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'newest' %>">
                  <%= link_to '最新', agent_products_path+"?reorder=newest" %>
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'sales' %>">
                  <s>销量</s>
                  <!-- <#%= link_to '销量', agent_products_path+"?reorder=sales" %> -->
                </li>
                <li class="<%= 'sign' if params[:reorder] == 'price' %>">
                  <%= link_to '价格', agent_products_path+"?reorder=price" %>
                </li>
              </ul>
            </div>
            <!-- END col-6 -->
          </div>
          <!-- END row -->
        </div>
        <!-- END search-toolbar -->
        <!-- BEGIN search-item-container -->
        <div class="search-item-container">
          <% @products.each_with_index do |product, index| %>
            <% if index%3 == 0 %>
              <!-- BEGIN item-row -->
              <div class="item-row">
            <% end %>
              <!-- BEGIN item -->
              <div class="item item-thumbnail">
                  <%= link_to agent_product_path(product), class: 'item-image' do%>
                    <%= image_tag product.image_items.first.try{image_url}||'no-picture'%>
                    <% if @product.discount.to_i > 0 && @product.discount.to_i < @product.price.to_i %>
                      <div class="discount">优惠折扣中</div>
                    <% end %>
                  <% end %>
                  <div class="item-info" style="letter-spacing: 2px;">
                    <h4 class="item-title">
                      <%= link_to product.name, agent_product_path(product) %>
                    </h4>
                    <p class="item-desc"><%= product.description.blank? ? "暂无描述".html_safe :  product.description %></p>
                    <div class="m-t-10">
                      <small class="item-desc">
                        <s>￥<%= product.price %></s>
                      </small>
                      <span class="text-danger h3">
                        <small class="text-danger">￥</small><%= product.price %>
                      </span>
                    </div>
                    <div class="item-discount-price"></div>
                  </div>
              </div>
            <!-- END item-row -->
            <% if index%3 == 2 || index+1 == @products.size %>
              <!-- END item -->
              </div>
            <% end %>
          <% end %>
        </div>
        <!-- END search-item-container -->
        <!-- BEGIN pagination -->
        <div class="text-center">
          <%= paginate @products %>
        </div>
        <!-- END pagination -->
      </div>
      <!-- END search-content -->
      <!-- BEGIN search-sidebar -->
      <div class="search-sidebar">
          <h4 class="title">查询</h4>
          <form action="search_results.html" method="POST" name="filter_form">
              <div class="form-group">
                  <label class="control-label">关键字</label>
                  <input class="form-control input-sm" name="keyword" value="" placeholder="输入查询关键字" type="text">
              </div>
              <div class="form-group">
                  <label class="control-label">价格</label>
                  <div class="row row-space-0">
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_from" value="10" placeholder="Price From" type="number">
                      </div>
                      <div class="col-md-2 text-center p-t-5 f-s-12 text-muted">～</div>
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_to" value="10000" placeholder="Price To" type="number">
                      </div>
                  </div>
              </div>
              <div class="m-b-30">
                  <button type="submit" class="btn btn-sm btn-inverse"><i class="fa fa-search"></i> 查询</button>
              </div>
          </form>
          <h4 class="title m-b-0">分类</h4>
          <ul class="search-category-list">
            <% @catalogs.each do |catalog| %>
              <li>
                <%= link_to agent_products_path+"?catalog=#{catalog.id}" do %>
                  <%= catalog.name %>
                  <span class="pull-right"><%= @products.where(catalog_id: catalog.id).size%></span>
                <% end %>
            <% end %>
          </ul>
      </div>
      <!-- END search-sidebar -->
    </div>
    <!-- END search-container -->
  </div>
  <!-- END container -->
</div>
