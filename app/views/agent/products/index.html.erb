
<div id="search-results" class="section-container bg-silver">
  <!-- BEGIN container -->
  <div class="container">
      <!-- BEGIN search-container -->
    <div class="search-container">
      <!-- BEGIN search-content -->
      <div class="search-content">
        <!-- BEGIN search-toolbar -->
        <div class="search-toolbar">
          <!-- BEGIN row -->
          <div class="row">
            <!-- BEGIN col-6 -->
            <div class="col-md-6">
              <h4>‘xx’ 搜索出 3个 商品</h4>
            </div>
            <!-- END col-6 -->
            <!-- BEGIN col-6 -->
            <div class="col-md-6 text-right">
              <ul class="sort-list">
                <li class="text"><i class="fa fa-filter"></i> 排序方式:</li>
                <li class="active"><a href="#">点击</a></li>
                <li><a href="#">最新</a></li>
                <li><a href="#">优惠</a></li>
                <li><a href="#">价格</a></li>
              </ul>
            </div>
            <!-- END col-6 -->
          </div>
          <!-- END row -->
        </div>
        <!-- END search-toolbar -->
        <!-- BEGIN search-item-container -->
        <div class="search-item-container">
          <!-- BEGIN item-row -->
          <div class="item-row">
            <!-- BEGIN item -->
            <div class="item item-thumbnail">
                <a href="product_detail.html" class="item-image">
                  <%= image_tag 'macbook-pro'%>
                  <div class="discount">15% 优惠</div>
                </a>
                <div class="item-info">
                    <h4 class="item-title">
                        <a href="product_detail.html">商品三<br>zo-2016</a>
                    </h4>
                    <p class="item-desc">简单的一些描述</p>
                    <div class="item-price">$649.00</div>
                    <div class="item-discount-price">$739.00</div>
                </div>
            </div>
            <!-- END item -->
            <!-- BEGIN item -->
            <div class="item item-thumbnail">
                <a href="product_detail.html" class="item-image">
                  <%= image_tag 'macbook-pro'%>
                  <div class="discount">32% 优惠</div>
                </a>
                <div class="item-info">
                    <h4 class="item-title">
                        <a href="product.html">商品二<br>Black</a>
                    </h4>
                    <p class="item-desc">small. 描述</p>
                    <div class="item-price">$599.00</div>
                    <div class="item-discount-price">$799.00</div>
                </div>
            </div>
            <!-- END item -->
            <!-- BEGIN item -->
            <div class="item item-thumbnail">
                <a href="product_detail.html" class="item-image">
                  <%= image_tag 'macbook-pro'%>
                  <div class="discount">20% 优惠</div>
                </a>
                <div class="item-info">
                    <h4 class="item-title">
                        <a href="product.html">商品一 <br>x/z</a>
                    </h4>
                    <p class="item-desc">small. 描述</p>
                    <div class="item-price">$499.00</div>
                    <div class="item-discount-price">$599.00</div>
                </div>
            </div>
            <!-- END item -->
          </div>
          <!-- END item-row -->
        </div>
        <!-- END search-item-container -->
        <!-- BEGIN pagination -->
        <div class="text-center">
            <ul class="pagination m-t-0">
                <li class="disabled"><a href="javascript:;">&laquo;</a></li>
                <li class="active"><a href="javascript:;">1</a></li>
                <li><a href="javascript:;">2</a></li>
                <li><a href="javascript:;">3</a></li>
                <li><a href="javascript:;">4</a></li>
                <li><a href="javascript:;">5</a></li>
                <li><a href="javascript:;">&raquo;</a></li>
            </ul>
        </div>
        <!-- END pagination -->
      </div>
      <!-- END search-content -->
      <!-- BEGIN search-sidebar -->
      <div class="search-sidebar">
          <h4 class="title">查询</h4>
          <form action="search_results.html" method="POST" name="filter_form">
              <div class="form-group">
                  <label class="control-label">关键字</label>
                  <input class="form-control input-sm" name="keyword" value="" placeholder="输入查询关键字" type="text">
              </div>
              <div class="form-group">
                  <label class="control-label">价格</label>
                  <div class="row row-space-0">
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_from" value="10" placeholder="Price From" type="number">
                      </div>
                      <div class="col-md-2 text-center p-t-5 f-s-12 text-muted">～</div>
                      <div class="col-md-5">
                          <input class="form-control input-sm" name="price_to" value="10000" placeholder="Price To" type="number">
                      </div>
                  </div>
              </div>
              <div class="m-b-30">
                  <button type="submit" class="btn btn-sm btn-inverse"><i class="fa fa-search"></i> 查询</button>
              </div>
          </form>
          <h4 class="title m-b-0">分类</h4>
          <ul class="search-category-list">
            <% @catalogs.each do |catalog| %>
              <li><a href="#"><%= catalog.name %> <span class="pull-right">(10)</span></a></li>
            <% end %>
          </ul>
      </div>
      <!-- END search-sidebar -->
    </div>
    <!-- END search-container -->
  </div>
  <!-- END container -->
</div>
