<div id="product" class="section-container p-t-20">
    <!-- BEGIN container -->
    <div class="container">
        <!-- BEGIN breadcrumb -->
        <ul class="breadcrumb m-b-10 f-s-12">
          <li>分类:&nbsp;</li>
          <% @catalog_ancestors.each do |catalog| %>
          <li><a href="#"><%= catalog.name %></a></li>
          <% end %>
        </ul>
        <!-- END breadcrumb -->

        <!-- BEGIN product -->
        <div class="product p-t-25">
            <!-- BEGIN product-detail -->
            <div class="product-detail">
                <!-- BEGIN product-image -->
                <div class="product-image">
                  <% if @product.image_items.length > 0 %>
                    <!-- BEGIN product-thumbnail -->
                    <div class="product-thumbnail">
                      <ul class="product-thumbnail-list checkout_image_list">
                        <% @product.image_items.each_with_index do |image, index| %>
                          <li class="<%= if index < 1 then 'active' end %>"><a href="javascript:void(0)" data-url="<%= image.image_url %>"><%= image_tag image.image_url%></a></li>
                        <% end %>
                      </ul>
                    </div>
                    <!-- END product-thumbnail -->
                  <% end %>
                  <!-- BEGIN product-main-image -->
                  <div class="product-main-image" data-id="main-image">
                    <%= image_tag @product.image_items.first.try{image_url} || 'no-picture'%>
                  </div>
                  <!-- END product-main-image -->
                </div>
                <!-- END product-image -->
                <!-- BEGIN product-info -->
                <div class="product-info">
                    <!-- BEGIN product-info-header -->
                    <div class="product-info-header">
                        <h1 class="product-title">
                          <% if @product.discount.to_i > 0 && @product.discount.to_i < @product.price.to_i %>
                            <span class="label label-danger">
                              优惠折扣中
                            </span>
                          <% end %>
                          <%= @product.name %>
                        </h1>
                    </div>
                    <!-- END product-info-header -->
                    <div class="product-attr-info">
                        <ul class="list-inline row">
                          <li class='col-sm-12 col-md-4'>库存: <b class="text-success"><%= @product.stock %><%= "(#{@product.unit})" if @product.unit.present? %></b></li>
                          <li class='col-sm-12 col-md-4'>销量：<b class="text-danger"> <%= '~' %> </b></li>
                          <li class='col-sm-12 col-md-4'>累计评价：<b class="text-danger"> <%= '~' %> </b></li>
                        </ul>
                    </div>
                    <div class="product-attr-info">
                      <div class="row">
                        <div class="col-xs-2">
                          产品介绍：
                        </div>
                        <div class="col-xs-10">
                          <%= @product.description%>
                        </div>
                      </div>
                    </div>
                    <!-- BEGIN product-info-list 一些主要配置信息列表展示-->
                    <ul class="product-info-list">
                      <li>
                        <i class="fa fa-circle"></i>
                        <span>产品重量</span>:
                        <span>
                          <%= @product.weight || '0'%>&nbsp;<%= "(#{@product.weight_unit})" if @product.weight_unit.present? %>
                        </span>
                      </li>
                      <% if @product.additional_attribute_keys.present? %>
                        <% @product.additional_attribute_keys.each do |k, v| %>
                          <li>
                            <i class="fa fa-circle"></i>
                            <span><%= v %></span>:
                            <span><%= @product.additional_attribute_values[k] %></span>
                          </li>
                        <% end %>
                      <% end %>
                    </ul>
                    <!-- END product-info-list -->
                    <!-- BEGIN product-social -->
                    <div class="product-social">
                      <ul>
                        <li><a href="javascript:;" class="qq" data-toggle="tooltip" data-trigger="hover" data-title="QQ" data-placement="top"><i class="fa fa-qq"></i></a></li>
                        <li><a href="javascript:;" class="weixin" data-toggle="tooltip" data-trigger="hover" data-title="微信" data-placement="top"><i class="fa fa-weixin"></i></a></li>
                        <li><a href="javascript:;" class="weibo" data-toggle="tooltip" data-trigger="hover" data-title="微博" data-placement="top"><i class="fa fa-weibo"></i></a></li>
                      </ul>
                      <!-- 分享 -->
                      <!-- <div rel="shareModal">
                        <share-modal><share-modal>
                      </div> -->
                    </div>
                    <!-- END product-social -->
                    <!-- BEGIN product-purchase-container -->
                    <div class="product-purchase-container">
                      <% if @product.discount.to_i > 0 && @product.discount.to_i < @product.price.to_i %>
                        <div class="product-discount">
                          <span class="discount">￥<%= @product.price %></span>
                        </div>
                        <div class="product-price">
                          <div class="price">￥<%= @product.discount %></div>
                        </div>
                      <% else %>
                        <div class="product-price">
                          <div class="price">￥<%= @product.price %></div>
                        </div>
                      <% end %>
                      <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#editModal" type="submit">编辑信息</button>
                      <% if @product.is_shelves %>
                        <button class="btn btn-inverse btn-lg" type="submit">取消上架</button>
                      <% else %>
                        <button class="btn btn-warning btn-lg" type="submit">产品上架</button>
                      <% end %>
                    </div>
                    <!-- END product-purchase-container -->
                </div>
