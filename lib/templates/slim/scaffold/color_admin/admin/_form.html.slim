.panel
  .panel-heading
    .panel-heading-btn
      a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"
        i class="fa fa-expand"
      a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"
        i class="fa fa-minus"
    h4 <%= singular_table_name %>
  .panel-body
    = simple_form_for @<%= singular_table_name %>, url: @<%= singular_table_name %>.new_record? ? <%= index_helper %>_path : <%= singular_table_name %>_path(@<%= singular_table_name %>, html: { class: 'form-horizontal' }) do |f|
      - if @<%= singular_table_name %>.errors.any?
        #error_explanation
          h2 = "#{pluralize(@<%= singular_table_name %>.errors.count, "error")} prohibited this <%= singular_table_name %> from being saved:"
          ul
            - @<%= singular_table_name %>.errors.full_messages.each do |message|
              li = message

<%- attributes.each do |attribute| -%>
      = f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>
<%- end -%>
      = f.submit class: 'btn btn-success btn-block'
